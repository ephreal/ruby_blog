<%= form_for [@post, comment] do |form| %>
    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    <div class="field">
        <%= form.label :content, "Comment"  %>
        <%= form.text_area :content %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>

<% end %>
